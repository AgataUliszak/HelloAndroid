<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Setting style of View -->
    <style name="StyleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="StyleTextView1" parent="StyleTextView">
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:paddingTop">@dimen/padding_top_2</item>
        <item name="android:paddingLeft">@dimen/padding_left_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextView2" parent="StyleTextView">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:paddingTop">@dimen/padding_top_1</item>
        <item name="android:paddingLeft">@dimen/padding_left_2</item>
    </style>
</resources>
